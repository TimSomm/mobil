<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#00FFFFFF"
    android:elevation="200dp"
    android:layout_marginTop="25sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="5sp"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/courseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseTitle"
            android:layout_marginBottom="5sp"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/courseOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseDescription"
            android:layout_marginBottom="5sp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/coursePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseOwner"
            android:layout_marginBottom="15sp"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/detailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/coursePrice"
            android:layout_marginBottom="5sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/press_for_details"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>